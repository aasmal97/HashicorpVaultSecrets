{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["es2020"],
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "scripts/**/*",
    "action/**/*",
    "utils/**/*"
  ],
  "exclude": ["node_modules", "**/*.spec.ts", "dist"]
}
